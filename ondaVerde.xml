<?xml version="1.0" encoding="utf-8"?>
<!DOCTYPE nta PUBLIC '-//Uppaal Team//DTD Flat System 1.6//EN' 'http://www.it.uu.se/research/group/darts/uppaal/flat-1_6.dtd'>
<nta>
	<declaration>const int N = 4;  // # Semáforos
typedef int[0,N-1] id_t;

chan verde, amarelo;</declaration>
	<template>
		<name x="5" y="5">Semaforo</name>
		<parameter>const id_t id</parameter>
		<declaration>clock x;

const int tempoVerde = 50; 
const int tempoAmarelo = 5;
const int tempoVermelho = 55;</declaration>
		<location id="id0" x="-314" y="-195">
			<name x="-340" y="-229">Verde</name>
		</location>
		<location id="id1" x="-110" y="-195">
			<name x="-136" y="-238">Amarelo</name>
		</location>
		<location id="id2" x="-212" y="-51">
			<name x="-246" y="-34">Vermelho</name>
		</location>
		<init ref="id2"/>
		<transition id="id3">
			<source ref="id2"/>
			<target ref="id0"/>
			<label kind="guard" x="-408" y="-136">x&gt;=tempoVermelho</label>
			<label kind="synchronisation" x="-331" y="-119">verde !</label>
			<label kind="assignment" x="-408" y="-119">x=0</label>
		</transition>
		<transition id="id4">
			<source ref="id1"/>
			<target ref="id2"/>
			<label kind="guard" x="-153" y="-136">x&gt;=tempoAmarelo</label>
			<label kind="assignment" x="-153" y="-119">x=0</label>
		</transition>
		<transition id="id5">
			<source ref="id0"/>
			<target ref="id1"/>
			<label kind="guard" x="-272" y="-221">x&gt;=tempoVerde</label>
			<label kind="synchronisation" x="-212" y="-195">amarelo !</label>
			<label kind="assignment" x="-272" y="-195">x=0</label>
		</transition>
	</template>
	<template>
		<name>Veiculo</name>
		<declaration>clock y; // Relógio para controlar a movimentação do carro

const int velocidade = 11; // Velocidade do carro em metros/segundo
// Tempos estimados de chegada em cada semáforo baseado na distância e na velocidade
int tempoChegadaSemaforo1 = 108;
int tempoChegadaSemaforo2 = 11;
int tempoChegadaSemaforo3 = 14;
int tempoChegadaSemaforo4 = 15;</declaration>
		<location id="id6" x="-238" y="-136">
			<name x="-248" y="-170">Conduzindo</name>
		</location>
		<location id="id7" x="-238" y="-51">
			<name x="-229" y="-43">Esperando</name>
		</location>
		<init ref="id6"/>
		<transition id="id8">
			<source ref="id7"/>
			<target ref="id6"/>
			<label kind="synchronisation" x="-340" y="-102">verde?</label>
			<nail x="-289" y="-93"/>
		</transition>
		<transition id="id9">
			<source ref="id6"/>
			<target ref="id7"/>
			<label kind="synchronisation" x="-187" y="-102">amarelo?</label>
			<nail x="-187" y="-93"/>
		</transition>
	</template>
	<system>
system Semaforo, Veiculo;
</system>
	<queries>
		<query>
			<formula/>
			<comment/>
		</query>
	</queries>
</nta>
